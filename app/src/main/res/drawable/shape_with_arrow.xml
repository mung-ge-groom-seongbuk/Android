<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 둥근 모서리 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 배경 색상 -->
            <corners android:radius="5dp"/> <!-- 둥근 모서리 설정 -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- 테두리 -->
        </shape>
    </item>

    <!-- 드롭다운 화살표 아이콘 -->
    <item android:right="8dp" android:gravity="right|center_vertical">
        <bitmap android:src="@android:drawable/arrow_down_float"
            android:gravity="right|center_vertical"/>
    </item>

</layer-list>