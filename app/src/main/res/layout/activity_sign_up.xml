<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.account.SignUpActivity">

        <android.widget.TextView
            android:id="@+id/sign_up_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold" />

        <android.widget.EditText
            android:id="@+id/sign_up_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/login_input_text"
            android:hint="이름을 입력하세요"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <android.widget.EditText
            android:id="@+id/sign_up_user_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/login_input_text"
            android:hint="이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <android.widget.EditText
            android:id="@+id/sign_up_phone_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/login_input_text"
            android:hint="휴대폰 번호를 입력하세요"
            android:inputType="phone"
            android:padding="12dp" />

        <android.widget.EditText
            android:id="@+id/sign_up_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/login_input_text"
            android:hint="패스워드를 입력하세요"
            android:inputType="textPassword"
            android:padding="12dp" />

        <android.widget.Button
            android:id="@+id/sign_up_sign_up_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_login_button"
            android:text="회원가입"
            android:textColor="#ffffff" />

        <android.widget.TextView
            android:id="@+id/sign_up_sns_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="OR"
            android:textColor="#808080" />

        <android.widget.Button
            android:id="@+id/sign_up_kakao_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_kakao_login_button"
            android:drawableLeft="@drawable/login_kakao_image"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"

            android:text="카카오 로그인"
            android:textColor="#000000" />

    </LinearLayout>
</layout>