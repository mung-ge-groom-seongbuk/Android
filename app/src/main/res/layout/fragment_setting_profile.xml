<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDE8D9"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="16dp">
    <!-- 프로필 이미지와 카메라 아이콘 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/example_profile"
                android:background="@drawable/circle_shape"
                android:scaleType="centerCrop"/>


            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_camera"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- 닉네임 입력란 -->


    <TextView
        android:id="@+id/setting_goal_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표날짜  설정"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F7F7FA"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/setting_finish_date_tv"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="종료 날짜"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_finish_date2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:backgroundTint="#E0E0E0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="2024.11.16"
            android:textColor="#000000" />
    </LinearLayout>


    <TextView
        android:id="@+id/setting_goal_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표날짜  설정"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F7F7FA"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/setting_finish_date_tv"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="종료 날짜"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_finish_date2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:backgroundTint="#E0E0E0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="2024.11.16"
            android:textColor="#000000" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>