
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDE8D9"
        android:padding="16dp"
        android:gravity="center">


        <TextView
            android:id="@+id/setting_goal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="목표 설정"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="16dp">
        <TextView
            android:id="@+id/setting_goal_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표날짜  설정"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F7F7FA"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/setting_finish_date_tv"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text="종료 날짜"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/setting_finish_date2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="#E0E0E0"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="2024.11.16"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/setting_goal_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 설정"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F7F7FA"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/setting_goal_type2_tv"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text="달성 목표"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/setting_goal_type_sp"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:scrollbarSize="3dp"

             />

        </LinearLayout>

        <TextView
            android:id="@+id/setting_account_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="거리 설정"
            android:textSize="16sp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F7F7FA"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_marginBottom="24dp">



                <TextView
                    android:id="@+id/setting_goal_distance_tv"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:text="달성 목표"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_goal_distance2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:backgroundTint="#E0E0E0"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="end
"
                    android:text="km"
                    android:textColor="#000000" />




        </LinearLayout>


    </LinearLayout>


</LinearLayout>