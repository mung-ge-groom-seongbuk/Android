
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDE8D9"
        android:padding="16dp"
        android:gravity="center">


        <TextView
            android:id="@+id/setting_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="계정 설정"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="16dp">
        <TextView
            android:id="@+id/setting_account_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F7F7FA"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/setting_account_id2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text=""
                android:textSize="16sp" />

            <Button
                android:id="@+id/setting_account_id_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"
                android:textColor="#000000"
                android:backgroundTint="#E0E0E0"
                android:layout_gravity="end"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/setting_account_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F7F7FA"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/setting_account_pw2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text=""
                android:textSize="16sp" />

            <Button
                android:id="@+id/setting_account_pw_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"
                android:textColor="#000000"
                android:backgroundTint="#E0E0E0"
                android:layout_gravity="end"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/setting_account_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="세부 설정"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/setting_account_notify1_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매칭 알림"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/setting_account_noify1_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_account_noify2_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="채팅 알림"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/setting_account_noify2_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>